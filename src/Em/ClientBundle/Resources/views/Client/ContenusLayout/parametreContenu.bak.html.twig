<div class="row">
  {{ render(controller('EmClientBundle:Client:renderMenuLeft')) }}
    <div class="col-md-9">
        <div class="row">
            {% for flashMessage in app.session.flashbag.get('Notice')|slice(0,1) %}

                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong>Hi !</strong>  {{ flashMessage }} .
                </div>
            {% endfor %}
        </div>
        <div class="row">

            <div class="col-md-5">
                <form action="{{ path('em_client_parametre') }}"  METHOD="post">
                    <h4>Informations Personnelles</h4>
                    <div class="form-group form-group-icon-left"><i class="fa fa-user input-icon"></i>
                        <label>Pseudo (login)</label>
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group form-group-icon-left"><i class="fa fa-user input-icon"></i>
                        <label>Nom & Prénoms</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group form-group-icon-left"><i class="fa fa-envelope input-icon"></i>
                        <label>E-mail</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'readonly' : 'true'}}) }}
                    </div>
                    <div class="form-group form-group-icon-left"><i class="fa fa-phone input-icon"></i>
                        <label>Phone </label>
                        {{ form_widget(form.phone ,{'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="gap gap-small"></div>
                    <h4>Géolocalisation</h4>
                    <div class="form-group">
                        <label> Adress</label>
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        {{ form_widget(form._token, {'attr': {'type' : 'hidden'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Ville</label>
                        {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Pays</label>
                        {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <hr>
                    <input type="submit" class="btn btn-primary" value="Modifier Informations">
                </form>
            </div>
            {{ render(controller('EmClientBundle:ChangePassword:changePassword')) }}
        </div>
    </div>
</div>
<div class="gap"></div>