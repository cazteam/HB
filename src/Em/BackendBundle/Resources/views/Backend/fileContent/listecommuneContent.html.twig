{% for flashMessage in app.session.flashbag.get('Notice')|slice(0,1) %}

    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <strong>Parfait !</strong>  {{ flashMessage }} .
    </div>
{% endfor %}
<div class="panel">
    <div class="panel-heading">
        <h4 class="panel-title">Gerer les communes du site</h4>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-bordered table-inverse table-striped nomargin">
                <thead>
                <tr>
                    <th class="text-center">
                        <label class="ckbox ckbox-info">
                            <input type="checkbox"><span></span>
                        </label>
                    </th>
                    <th>Pays</th>
                    <th class="text-center">Ville</th>
                    <th class="text-right">Communes </th>
                    <th class="text-right"> Ajout commune </th>
                </tr>
                </thead>
                <tbody>
                {% for data in communes|slice(0,15) %}
                <tr>
                    <td class="text-center">
                        <label class="ckbox ckbox-info">
                            <input type="checkbox"><span></span>
                        </label>
                    </td>
                    <td>Côte d'Ivoire</td>
                    <td class="text-center">{{ data.villes.nom }}</td>
                    <td class="text-right"> {{ data.nom }} </td>

                    <td class="text-right">
                        <ul class="table-options">
                            <li><a href="{{ path('em_backend_addcommune') }}" title="Ajouter commune"><i class="fa fa-plus"></i></a></li>
                            <li><a href="{{ path('em_backend_addville', {'idpage' : data.villes.id }) }}" title="Modifer ville"><i class="fa fa-chevron-up"></i></a></li>

                        </ul>
                    </td>
                </tr>
               {% endfor %}
                </tbody>
            </table>
        </div><!-- table-responsive -->
    </div>
</div>



