<div class="row">

    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading nopaddingbottom">
                <h4 class="panel-title">Modifier les information du site</h4>
            </div>
            <div class="panel-body">
                <hr>
                <form id="basicForm" action="{{ path('em_backend_informationsite', {'idinfo' : idinfo })}}" class="form-horizontal"  method="post">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Telephone : <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Mobile : <span class="text-danger">( * )</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.mobile, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Email <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Google map <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.urlmap, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">adresse <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Url facebook <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.urlfacebook, {'attr': {'class': 'form-control'}}) }}
                            {{ form_widget(form._token, {'attr': {'type' : 'hidden'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Decrire votre site <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}

                        </div>
                    </div>
                    <hr>

                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button class="btn btn-success btn-quirk btn-wide mr5">Envoyer</button>
                            <button type="reset" class="btn btn-quirk btn-wide btn-default">Annuler</button>
                        </div>
                    </div>

                </form>
            </div><!-- panel-body -->
        </div><!-- panel -->

    </div><!-- col-md-6 -->

   <!-- col-md-6 -->

</div>