<div class="row">

    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading nopaddingbottom">
                <h4 class="panel-title">Gerer les news</h4>
            </div>
            <div class="panel-body">
                <hr>
                <form id="basicForm" action="{{ path('em_backend_addnews', {'idpage' : idpage })}}" enctype="multipart/form-data"  class="form-horizontal"  method="post">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Title <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Description <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Keywords <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.keywords, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Titre Article <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">Résumé <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.resume, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Contenus <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form._token, {'attr': {'type' : 'hidden'}}) }}
                            {{ form_widget(form.contenus, {'attr': {'rows': '8','placeholder': ' * Votre message ici...'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">Images <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.Images.url, {'attr': {'class': 'form-control'}}) }}                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">Publier ? <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.publish, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <hr>

                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button class="btn btn-success btn-quirk btn-wide mr5">Envoyer</button>
                            <button type="reset" class="btn btn-quirk btn-wide btn-default">Annuler</button>
                        </div>
                    </div>

                </form>
            </div><!-- panel-body -->
        </div><!-- panel -->

    </div><!-- col-md-6 -->

    <!-- col-md-6 -->

</div>