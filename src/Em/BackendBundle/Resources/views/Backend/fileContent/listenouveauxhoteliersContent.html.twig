<div class="mainpanel">

    <div class="contentpanel">

        <ol class="breadcrumb breadcrumb-quirk">
            <li><a href="#"><i class="fa fa-home mr5"></i> Accueil</a></li>
            <li><a href="#">Hôteliers</a></li>
            <li class="active">Nouveaux membre</li>
        </ol>
        {% for flashMessage in app.session.flashbag.get('notice')|slice(0,1) %}

            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <strong>Parfait !</strong>  {{ flashMessage }}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-sm-8 col-md-9 col-lg-10 people-list">

                <div class="people-options clearfix">
                    <div class="pull-left">
                        <h4 class="text-info">Liste de nouvelles demandes d'inscription d'hôteliers !</h4>
                    </div>

                    <div class="btn-group pull-right people-pager">
                        <button type="button" class="btn btn-warning"><i class="fa fa-user"></i></button>
                    </div>
                    <span class="people-count pull-right">Total en attente de validation <strong>{{ pagination|length }}</strong> sur  <strong>{{ hoteliersall|length }}</strong>  Hôteliers </span>
                </div><!-- people-options -->

                <div class="row">

                  {% for data in  pagination %}
                    <div class="col-md-6 col-lg-3">
                        <div class="panel panel-profile grid-view">
                            <div class="panel-heading">
                                <div class="text-center">
                                    <a href="#" class="panel-profile-photo">
                                        <img class="img-circle" src="{{ asset('bundles/embackend/assets/') }}/images/photos/hotelier.gif" alt="">
                                    </a>
                                    <h4 class="panel-profile-name">{{ data.username }}</h4>
                                    <p class="media-usermeta"><i class="glyphicon glyphicon-briefcase"></i> Hôtelier</p>
                                </div>
                                <ul class="panel-options">
                                    <li><a class="tooltips" href="" data-toggle="tooltip" title="View Options"><i class="glyphicon glyphicon-option-vertical"></i></a></li>
                                </ul>
                            </div><!-- panel-heading -->
                            <div class="panel-body people-info">

                                <div class="info-group">
                                    <label>Date inscription</label>
                                    {{ data.dateinscrit|date('d-m-Y H:i:s')}}
                                </div>
                                <div class="info-group">
                                    <label>Email</label>
                                    {{ data.email }}
                                </div>
                                <div class="info-group">
                                    <label>Phone</label>
                                    ----
                                </div>

                                <div class="row">
                                    <div class="col-xs-6">
                                        <div class="info-group">
                                            <label>Chambres</label>
                                            <h4>0</h4>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="info-group">
                                           <a href="{{ path('em_backend_enabled', {'iduser': data.id, 'status' : 'valider'}) }}">  <button class="btn btn-warning">Valider</button></a>
                                        </div>
                                    </div>
                                </div>


                            </div><!-- panel-body -->
                        </div><!-- panel -->
                    </div><!-- col-md-6 -->

                  {% endfor %}
                </div><!-- row -->

            </div><!-- col-sm-8 -->

            <div class="col-sm-4 col-md-3 col-lg-2">


            {{ render(controller('EmBackendBundle:Hotelier:lastHotelierValider')) }}


            </div>
        </div><!-- row -->

    </div><!-- contentpanel -->

</div><!-- mainpanel -->