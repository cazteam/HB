    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <strong>Good !</strong>  {{ flashMessage }} <a href="" class="alert-link"></a>.
    </div>
{% endfor %}
<div class="row">

    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading nopaddingbottom">
                <h4 class="panel-title"> Informations </h4>
            </div>
            <div class="panel-body">
                <hr>
                <form id="basicForm"  class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Telephone : <span class="text-danger">*</span></label>
                        <div class="col-sm-8">

                            <input type="text" readonly="" class="form-control" value="{{ infosite.telephone }}"/>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Mobile : <span class="text-danger">( * )</span></label>
                        <div class="col-sm-8">

                            <input type="text" readonly="" class="form-control" value="{{ infosite.mobile }}"/>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Email <span class="text-danger">*</span></label>
                        <div class="col-sm-8">

                            <input type="text" readonly="" class="form-control" value="{{ infosite.email }}"/>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Google map  <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <p> {{ infosite.urlmap|raw }} </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">adresse <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <textarea readonly="" class="form-control" rows="5"  > {{ infosite.adresse}} </textarea>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Url facebook <span class="text-danger">*</span></label>
                        <div class="col-sm-8">

                            <textarea readonly="" class="form-control"  > {{ infosite.urlfacebook}} </textarea>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Votre slogan<span class="text-danger">*</span></label>
                        <div class="col-sm-8">

                            <textarea readonly="" class="form-control"  > {{ infosite.description}} </textarea>

                        </div>
                    </div>
                    <hr>


                </form>

                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <a href="{{ path('em_backend_informationsite', {'idinfo': infosite.id}) }}"> <button class="btn btn-success btn-quirk btn-wide mr5">Modifier les Informations </button></a>
                    </div>
                </div>
            </div><!-- panel-body -->
        </div><!-- panel -->

    </div><!-- col-md-6 -->

   <!-- col-md-6 -->

</div>