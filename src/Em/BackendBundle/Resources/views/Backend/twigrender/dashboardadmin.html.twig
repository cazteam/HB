        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}


        <div class="col-xs-4 col-sm-5 col-md-4 page-user">

            <div class="panel">
                <a href="{{ path('em_backend_listebienimmo') }}">
                    <div class="panel-heading">
                        <h4 class="panel-title">Gestion Immobilières</h4>
                    </div>
                    <div class="panel-body">
                        <div class="page-icon"><i class="icon ion-person-stalker"></i></div>
                    </div>
                </a>
            </div>

        </div>


    <div class="col-xs-6 col-sm-5 col-md-4 page-messages">
        <div class="panel">

            <a href="{{ path('em_backend_listenews') }}" title="écrire un article">
                <div class="panel-heading">
                    <h4 class="panel-title">Nos Services</h4>
                </div>
                <div class="panel-body">
                    <div class="page-icon"><i class="icon ion-radio-waves"></i></div>
                </div>
            </a>

        </div>
    </div>

    <div class="col-xs-8 col-sm-8 col-md-4 page-settings">
        <div class="panel">
            <a href="{{ path('em_backend_parametre', {'iduser' : user.id}) }}" >
            <div class="panel-heading">
                <h4 class="panel-title">Mes paramètres</h4>
            </div>
            <div class="panel-body">
                <div class="page-icon"><i class="icon ion-gear-a"></i></div>
            </div>
            </a>
        </div>
    </div>
