
<div class="panel">
    <div class="panel-heading">
        <h4 class="panel-title">Mes informations :  </h4>
    </div>
    <div class="panel-body">
        <br>
       <form action="{{ path('fos_user_change_password')}}"  enctype="multipart/form-data" class="form-horizontal" METHOD="post">
            <div class="input-group mb15">
                <span class="input-group-btn">
                  <button type="button" class="btn btn-default">Mot de passe actuel : </button>
                </span>
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}


            </div>
            <div class="input-group mb15">
                <span class="input-group-btn">
                  <button type="button" class="btn btn-default">Nouveau mot de passe : </button>
                </span>
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}

            </div>
           <div class="input-group mb15">
                <span class="input-group-btn">
                  <button type="button" class="btn btn-default">Verifier Nouveau mot de passe : </button>

                </span>
               {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
               {{ form_widget(form._token, {'attr': {'type' : 'hidden'}}) }}

           </div>

            <div class="row">
                <div class="col-sm-9 col-sm-offset-3">
                    <button class="btn btn-success btn-quirk btn-wide mr5">Changer Acc√®s !</button>
                </div>
            </div>

        </form>

    </div>
</div>