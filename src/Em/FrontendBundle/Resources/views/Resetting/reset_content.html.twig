{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-4 col-md-offset-2">
    {% if error is defined %}
        {{ error.messageKey|trans(error.messageData, 'security') }}
     {% endif %}

    <h3>Mot de passe oublié ?</h3>
    <p>vos accès sur Homemobilite vont être changés</p>
    <p></p>
</div>
<div class="col-md-5">
    <p>
        {% if invalid_username is defined %}
            <a class="btn btn-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</a>
        {% endif %}
    </p>
    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">

        <div class="form-group form-group-icon-left">
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau Mot de passe'}}) }}
        </div>

        <div class="form-group form-group-icon-left">
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder' : 'Retaper Nouveau mot de passe'}}) }}
        </div>
        {{ form_widget(form._token, {'attr': {'type' : 'hidden'}}) }}
     <div class="form-group">
         <input class="btn btn-primary" type="submit" value="Valider" />
     </div>


    </form>
</div>