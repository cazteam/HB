<div class="box bg-gray">
    <h3>Votre avis </h3>
    <form action="{{ path('em_frontend_addcommentaire', {'idagence' : idagence})  }}" method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>Titre </label>
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-group">
                    <label>Contenu </label>

                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form._token, {'attr': {'type' : 'hidden'}}) }}

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Note </label>
                    {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                </div>
                <input class="btn btn-primary" type="submit" value="Valider">
            </div>
        </div>
    </form>
</div>