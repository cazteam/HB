<div id="content-wrapper" class="site-content-wrapper site-pages">
    <div id="content" class="site-content layout-boxed">
        <div class="container">
            <div class="container-property-single clearfix">
                <div class="col-lg-8 zero-horizontal-padding property-slider-wrapper">
                    <div class="single-property-slider gallery-slider flexslider">
                        <ul class="slides">
                            {% for dataimage in dataimages %}
                            <li>
                                <a class="swipebox" data-rel="gallery12" href="{{ asset('bundles/emfrontend/assets/') }}pics/{{ dataimage.url }}/{{ dataimage.title }}" alt="{{dataimage.title }}" title="{{dataimage.title}}">
                                    <img src="{{ asset('bundles/emfrontend/assets/') }}pics/{{ dataimage.url }}/{{ dataimage.title }}" alt="{{dataimage.title }}" title="{{dataimage.title}}" >
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div id="property-featured-image" class="only-for-print">

                        <img src="{{ asset('bundles/emfrontend/assets/') }}images/property/property-interior-6-850x570.jpg" alt="Villa in Coral Gables">
                    </div>
                </div>
                <div class="col-lg-3 zero-horizontal-padding property-title-wrapper">
                    <div class="single-property-wrapper">
                        <header class="entry-header single-property-header">
                            <h1 class="entry-title single-property-title">{{ entity.libelle }}</h1>
                            <span class="single-property-price price">{{  entity.prix|localizedcurrency('XOF') }} </span>
                        </header>
                        <div class="property-meta entry-meta clearfix ">
                            <div class="meta-item">
                                <i class="meta-item-icon icon-pid">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="meta-icon-container" width="30" height="30" viewBox="0 0 48 48">
