
<div id="content-wrapper" class="site-content-wrapper site-pages">
    <div id="content" class="site-content layout-boxed">
        <div class="container">
            <div class="container-property-single clearfix">
                {{ render(controller('EmFrontendBundle:Frontend:menuPageRight')) }}

                <div class="col-md-8 site-main-content property-single-content">
                    <main id="main" class="site-main">
                        <div class="single-property-slider">

                            <ul id="image-gallery" class="list-unstyled">

                                {% for dataimage in dataimages %}
                                    <li  data-thumb="{{ asset('bundles/emfrontend/assets/pics/agences/') }}{{ dataimage.title }}">
                                        <a class="swipebox" data-rel="gallery12" href="{{ asset('bundles/emfrontend/assets/pics/agences/') }}{{ dataimage.title }}"  alt="slide">
                                            <img src="{{ asset('bundles/emfrontend/assets/pics/agences/') }}{{ dataimage.title }}" alt="{{dataimage.title }}" title="{{dataimage.title}}" >
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>

                        </div>

                        <article class="hentry clearfix">

                            <div class="entry-content clearfix">

                                <h4 class="fancy-title">Description</h4>
                                <div class="property-content">
                                    <p>
                                        {{ datasincerooms.agences.description  }}

                                    </p>
                                </div>
                                <div class="property-additional-details clearfix">
                                    <h4 class="fancy-title">Chambres disponibles</h4>

                                    {% for data in  dataallroom %}
                                        <article class="user-submit-property meta-item-half hentry clearfix">
                                            <div class="property-thumbnail col-xs-4 col-lg-4">
                                                <a href="{{ path('em_frontend_chambre_encours_reserve',{'reference': data.id}) }}">
                                                    <img src="{{ asset('bundles/emfrontend/assets/') }}pics/chambres/{{data.images.title }}" alt="{{ data.images.title }}" title="{{ data.images.title }}" />

                                                </a>
                                            </div>
                                            <div class="content-wrapper col-xs-4 col-lg-4">
                                                <div class="title-and-meta">
                                                    <header class="entry-header">
                                                        <h3 class="entry-title">
                                                            <a href="#" rel="bookmark">
                                                                <span class="meta-item-value approved">{{ data.typechambre }}</span>
                                                            </a><span class="price">{{ data.prixchambre|localizedcurrency('XOF') }}  </span>
                                                        </h3>
                                                    </header>
                                                    <!-- .entry-header -->
                                                    <div class="property-meta entry-meta clearfix">

                                                        <p>{{ data.description }}</p>

                                                    </div>

                                                    <!-- .property-meta -->
                                                </div>
                                                <!--.title-and-meta -->
                                                <!-- .action-buttons -->
                                            </div>
                                            <div class="content-wrapper col-xs-4 col-lg-4">
                                                <div class="title-and-meta">
                                                    <header class="entry-header">
                                                        <h3 class="entry-title">
                                                            <a href="{{ path('em_frontend_chambre_encours_reserve',{'reference': data.id}) }}" rel="bookmark">
                                                                <button class="btn btn-primary btn-lg pull-right" type="submit">  Reserver  </button>
                                                            </a>
                                                        </h3>
                                                    </header>
                                                    <!-- .entry-header -->

                                                    <!-- .property-meta -->
                                                </div>
                                                <!--.title-and-meta -->
                                                <!-- .action-buttons -->
                                            </div>

                                            <!-- .content-wrapper -->
                                        </article>
                                    {% endfor %}
                                </div>

                            </div>
                        </article>
                        <section class="property-location-section clearfix">
                            <h4 class="fancy-title">Location</h4>
                            <div >
                                {{ datasincerooms.agences.urlmap|raw  }}

                            </div>
                            <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
                            <script type="text/javascript">
                                function initialize() {
                                    var myLatlng = new google.maps.LatLng(40.6845705, -74.1856747);
                                    var mapCanvas = document.getElementById('property-map');
                                    var mapOptions = {
                                        center: myLatlng,
                                        zoom: 11,
                                        zoomControl: true,
                                        zoomControlOptions: {
                                            style: google.maps.ZoomControlStyle.SMALL
                                        },
                                        panControl: false,
                                        mapTypeControl: true,
                                        scrollwheel: false
                                    };
                                    var map = new google.maps.Map(mapCanvas, mapOptions);
                                    var marker = new google.maps.Marker({
                                        position: myLatlng,
                                        map: map,
                                        icon: 'images/map/single-family-home-map-icon.png',
                                        title: 'Villa in Coral Gables'
                                    });
                                }
                                google.maps.event.addDomListener(window, 'load', initialize);
                            </script>
                        </section>
                        <div class="clearfix">
                        </div>
                    </main>
                    <!-- .site-main -->

                </div>
                <!-- .site-main-content -->

                <!-- Menu Right Detail User -->
                <!-- .site-sidebar-content -->
            </div>
            <!-- .container-property-single -->
        </div>
        <!-- .container -->
    </div>
    <!-- .site-content -->
</div>

