<div id="wrapper">
    <div class="main-content">
        <div class="row small-spacing">
            <div class="box-content card">
                <h4 class="box-title">
                    <i class="fa fa-bank ico"></i>Mon Porte-feuille
                </h4>

                <div class="card-content col-xs-12 col-lg-9">
                    <table id="row-grouping" class="table table-striped table-bordered table-responsive display" style="width:100%">
                        <thead>
                        <tr>
                            <th>Date </th>
                            <th>Agence</th>
                            <th>Total transaction</th>
                            <th>Part agence</th>
                            <th>Part Homemobilite</th>

                        </tr>
                        </thead>

                        <tbody>
                        {% for data in reservation %}
                            {%  set partproprietaire =  (data.prixtotal * (100 -  pourcentagecommercial))/100 %}
                            {%  set parthomemobilite =  (data.prixtotal *  pourcentagecommercial)/100 %}

                            <tr>
                            <td>{{ data.dateadd|date('d-m-Y H:i') }}</td>
                            <td>{{ data.chambre.agences.nom }}</td>
                            <td>{{  data.prixtotal|localizedcurrency('XOF') }}</td>
                            <td>{{  partproprietaire|localizedcurrency('XOF') }}</td>
                            <td>{{  parthomemobilite|localizedcurrency('XOF') }}</td>
                        </tr>
                        {% endfor %}


                        </tbody>
                    </table>
                </div>
                <!-- /.card-content -->
                <div class="col-xs-12 col-lg-3" style="margin-top:0.9em;">
                    <ul class="list-group">
                        <li class="list-group-item bg-danger text-white text-center">
                            MON PORTE-FEUILLE
                        </li>

                        <li class="list-group-item">
                            <span class="badge">{{ tauxreserv|length }}</span>
                            Reservations
                            <br>confirm√©es
                        </li>

                        <li class="list-group-item">
                            <span class="badge">{{ prixtotaux|localizedcurrency('XOF') }} </span>
                            Total Transaction
                        </li>
                    </ul>
                </div>


            </div>
        </div>
    </div>
</div>
