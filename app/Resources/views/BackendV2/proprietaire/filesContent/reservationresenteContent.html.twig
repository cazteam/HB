{% block Contenu %}
    <div id="wrapper">
        <div class="main-content">
            <div class="row small-spacing">
                <div class="box-content card">
                    <h4 class="box-title">
                        <i class="fa fa-building ico"></i>Les reservations en cours</h4>

                    <div class="card-content">
                        <div class="col-sm-12" style="margin-bottom:0.5em">
                            <a href="#"><button type="submit" class="btn btn-info btn-sm pull-right waves-effect waves-light">Ajouter un bien</button></a>
                        </div>

                        <table id="#table-bien" class="table table-bien table-striped table-bordered table-responsive display" style="width:100%">
                            <thead>
                            <tr>
                                <th>Type</th>
                                <th>N° Réservation</th>
                                <th>Agence</th>
                                <th>Nom & Prénoms</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Details</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Type</th>
                                <th>N° Réservation</th>
                                <th>Agence</th>
                                <th>Nom & Prénoms</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Details</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for data in entity %}
                            <td>{{ data.chambre.agences.caracteristique }}</td>
                            <td>{{ data.numeroreservation }}</td>
                             <td>{{ data.nom }} | {{ data.prenoms }}</td>
                            <td>{{ data.phone }}</td>
                             <td>{{ data.status }}</td>
                            <td>details</td>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    <!-- /.card-content -->
                </div>
            </div>
        </div>
    </div>


{% endblock Contenu %}

